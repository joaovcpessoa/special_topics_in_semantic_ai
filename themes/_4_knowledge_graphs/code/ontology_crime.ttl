
@prefix : <http://example.org/crime#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

<http://example.org/crime> a owl:Ontology ;
    rdfs:label "Ontologia para Redes Criminais (exemplo)"@pt ;
    rdfs:comment "Ontologia focalizada em atores, organizações, eventos, ativos, comunicações e evidências para análise de redes criminais."@pt .

### Classes
:Person a owl:Class ;
    rdfs:label "Pessoa"@pt ;
    rdfs:comment "Indivíduo humano (suspeito, vítima, testemunha, agente) ."@pt .

:Organization a owl:Class ;
    rdfs:label "Organização"@pt ;
    rdfs:comment "Entidade legal ou grupo (empresa de fachada, gangue, corporação)."@pt .

:CriminalOrganization a owl:Class ;
    rdfs:subClassOf :Organization ;
    rdfs:label "Organização Criminosa"@pt .

:Role a owl:Class ;
    rdfs:label "Papel"@pt ;
    rdfs:comment "Papel ocupado por uma pessoa em uma organização (líder, operador, muleiro)."@pt .

:CrimeEvent a owl:Class ;
    rdfs:label "Evento Criminal"@pt ;
    rdfs:comment "Ocorrência temporal relacionada a atividade criminosa (tráfico, lavagem, ataque)."@pt .

:Location a owl:Class ;
    rdfs:label "Local"@pt .

:Asset a owl:Class ;
    rdfs:label "Ativo"@pt ;
    rdfs:comment "Bens tangíveis ou intangíveis (contas bancárias, imóveis, veículos)."@pt .

:Transaction a owl:Class ;
    rdfs:label "Transação"@pt ;
    rdfs:comment "Movimentação de valor ou propriedade."@pt .

:Communication a owl:Class ;
    rdfs:label "Comunicação"@pt ;
    rdfs:comment "Uma comunicação entre atores (chamada, mensagem, e-mail)."@pt .

:Evidence a owl:Class ;
    rdfs:label "Evidência"@pt ;
    rdfs:comment "Item que pode servir como prova (documento, registro, foto)."@pt .

:Document a owl:Class ;
    rdfs:subClassOf :Evidence ;
    rdfs:label "Documento"@pt .

:Charge a owl:Class ;
    rdfs:label "Acusação"@pt ;
    rdfs:comment "Tipo legal de infração (tráfico, lavagem, fraude)."@pt .

:Arrest a owl:Class ;
    rdfs:label "Prisão"@pt .

:Conviction a owl:Class ;
    rdfs:label "Condenação"@pt .

### Object properties
:memberOf a owl:ObjectProperty ;
    rdfs:label "membroDe"@pt ;
    rdfs:domain :Person ;
    rdfs:range :Organization ;
    rdfs:comment "Pessoa é membro de uma organização."@pt .

:hasRole a owl:ObjectProperty ;
    rdfs:label "temPapel"@pt ;
    rdfs:domain :Person ;
    rdfs:range :Role .

:participatesIn a owl:ObjectProperty ;
    rdfs:label "participaEm"@pt ;
    rdfs:domain :Person ;
    rdfs:range :CrimeEvent .

:organizedBy a owl:ObjectProperty ;
    rdfs:label "organizadoPor"@pt ;
    rdfs:domain :CrimeEvent ;
    rdfs:range :Organization .

:locatedAt a owl:ObjectProperty ;
    rdfs:label "localizadoEm"@pt ;
    rdfs:domain rdfs:Resource ;
    rdfs:range :Location .

:owns a owl:ObjectProperty ;
    rdfs:label "possui"@pt ;
    rdfs:domain :Person ;
    rdfs:range :Asset .

:transfersTo a owl:ObjectProperty ;
    rdfs:label "transferePara"@pt ;
    rdfs:domain :Transaction ;
    rdfs:range rdfs:Resource .

:involvesTransaction a owl:ObjectProperty ;
    rdfs:label "envolveTransacao"@pt ;
    rdfs:domain :CrimeEvent ;
    rdfs:range :Transaction .

:communicatesWith a owl:ObjectProperty ;
    rdfs:label "comunicaCom"@pt ;
    rdfs:domain :Person ;
    rdfs:range :Person ;
    rdfs:comment "Indica comunicação direta entre pessoas."@pt .

:usesAsset a owl:ObjectProperty ;
    rdfs:label "usaAtivo"@pt ;
    rdfs:domain :CrimeEvent ;
    rdfs:range :Asset .

:linkedTo a owl:ObjectProperty ;
    rdfs:label "ligadoA"@pt ;
    rdfs:domain rdfs:Resource ;
    rdfs:range rdfs:Resource ;
    rdfs:comment "Ligação genérica entre recursos (e.g., evidências conectadas a pessoas)."@pt .

:hasEvidence a owl:ObjectProperty ;
    rdfs:label "temEvidencia"@pt ;
    rdfs:domain :CrimeEvent ;
    rdfs:range :Evidence .

:chargedWith a owl:ObjectProperty ;
    rdfs:label "acusadoDe"@pt ;
    rdfs:domain :Person ;
    rdfs:range :Charge .

:arrestedIn a owl:ObjectProperty ;
    rdfs:label "presoEm"@pt ;
    rdfs:domain :Person ;
    rdfs:range :Arrest .

:convictedOf a owl:ObjectProperty ;
    rdfs:label "condenadoPor"@pt ;
    rdfs:domain :Person ;
    rdfs:range :Conviction .

### Data properties
:hasName a owl:DatatypeProperty ;
    rdfs:label "nome"@pt ;
    rdfs:domain rdfs:Resource ;
    rdfs:range xsd:string .

:hasAlias a owl:DatatypeProperty ;
    rdfs:label "alias"@pt ;
    rdfs:domain :Person ;
    rdfs:range xsd:string .

:hasID a owl:DatatypeProperty ;
    rdfs:label "identificador"@pt ;
    rdfs:domain rdfs:Resource ;
    rdfs:range xsd:string .

:date a owl:DatatypeProperty ;
    rdfs:label "data"@pt ;
    rdfs:domain rdfs:Resource ;
    rdfs:range xsd:dateTime .

:amount a owl:DatatypeProperty ;
    rdfs:label "valor"@pt ;
    rdfs:domain :Transaction ;
    rdfs:range xsd:decimal .

:method a owl:DatatypeProperty ;
    rdfs:label "metodo"@pt ;
    rdfs:domain :Transaction ;
    rdfs:range xsd:string .

:phoneNumber a owl:DatatypeProperty ;
    rdfs:label "telefone"@pt ;
    rdfs:domain :Person ;
    rdfs:range xsd:string .

:email a owl:DatatypeProperty ;
    rdfs:label "email"@pt ;
    rdfs:domain :Person ;
    rdfs:range xsd:string .

### Simple axioms / constraints (informal)
:CriminalOrganization rdfs:comment "Organizações criminosas tipicamente têm membros e comumente organizam eventos criminais."@pt .

# Disjointness example
:Person owl:disjointWith :Organization .

